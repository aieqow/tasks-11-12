def is_palindrome(s):
    # Базовый случай: если длина строки 0 или 1 — это точно палиндром
    if len(s) <= 1:
        return True
    # Если первый и последний символы не совпадают —
    # строка не является палиндромом
    if s[0] != s[-1]:
        return False
    # Рекурсивный шаг: вызываем функцию для подстроки без первого и последнего символа
    return is_palindrome(s[1:-1])
# Примеры использования:
print(is_palindrome("шалаш"))    # True
print(is_palindrome("алгоритм"))    # False
