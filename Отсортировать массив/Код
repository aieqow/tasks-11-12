def is_sorted(arr, index=0):
    # Базовый случай: если индекс дошёл до предпоследнего элемента или дальше — массив считается отсортированным
    if index >= len(arr) - 1:
        return True
    # Если текущий элемент больше следующего — массив не отсортирован
    if arr[index] > arr[index + 1]:
        return False
    # Рекурсивный шаг: проверяем следующий индекс
    return is_sorted(arr, index + 1)
# Примеры использования:
print(is_sorted([20, 56, 71, 98, 100]))    # True
print(is_sorted([32, 2, 945, 461, 4]))     # False
